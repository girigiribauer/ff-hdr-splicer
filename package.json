{
  "name": "ff-hdr-splicer",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/user/ff-hdr-splicer"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder -p never",
    "build:mac": "tsc && vite build && electron-builder --mac -p never",
    "build:win": "tsc && vite build && electron-builder --win -p never",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest run --reporter verbose",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "cross-env": "^10.1.0",
    "ffmpeg-static": "^5.3.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "solid-js": "^1.9.10"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-storybook": "^10.1.11",
    "jsdom": "^27.4.0",
    "playwright": "^1.57.0",
    "storybook": "^10.1.11",
    "storybook-solidjs-vite": "^10.0.9",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-solid": "^2.11.10",
    "vitest": "^4.0.16"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.user.ff-hdr-splicer",
    "productName": "FF HDR Splicer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist",
      "dist-electron"
    ],
    "mac": {
      "target": "dmg",
      "identity": "-",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "win": {
      "target": "nsis"
    },
    "asarUnpack": [
      "**/node_modules/ffmpeg-static/**",
      "**/node_modules/ffprobe-static/**"
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended",
      "plugin:storybook/recommended"
    ]
  }
}
